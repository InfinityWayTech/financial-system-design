generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Procedimento {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  dataAtendimento String
  paciente        String
  profissional    String
  formaPagamento  String
  valor           Decimal
  tipo            String
  comissao        Decimal @default(0)

  @@index([paciente])
  @@index([profissional])
  @@index([dataAtendimento])
}

model Paciente {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  nome               String
  totalProcedimentos Decimal
  totalGeral         Decimal
  totalComissao      Decimal
  status             String
  diferenca          Decimal @default(0)

  @@unique([nome, createdAt])
  @@index([nome])
  @@index([status])
}

model Resumo {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  totalPacientes       Int
  pacientesOk          Int
  pacientesDivergentes Int
  somaComissoes        Decimal
  somaDivergencias     Decimal

  @@index([createdAt])
}
